<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_board_adopt"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_animal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="품종"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/img_animal"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/img_animal"
        app:layout_constraintTop_toBottomOf="@id/txt_1"/>

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록일"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/img_animal"
        app:layout_constraintTop_toBottomOf="@id/txt_2"/>

    <TextView
        android:id="@+id/txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/img_animal"
        app:layout_constraintTop_toBottomOf="@id/txt_3"/>

    <TextView
        android:id="@+id/txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구조장소"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/img_animal"
        app:layout_constraintTop_toBottomOf="@id/txt_4"/>


</androidx.constraintlayout.widget.ConstraintLayout>